
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Seguridad" icon="" class="action-bar" style="background: #FFC400">
        </ActionBar>
    </Page.actionBar>

    <StackLayout>
        <Label text="Entre credenciales para acceder" class="h2 text-center"/>
        <TextField hint="Username" text="{{ username }}"  />
        <TextField hint="Password" text="{{ password }}"  />
        <Button text="Acceder" style="width:150;height:80" class="btn" tap="goToCreateNotifications"/>
    </StackLayout>
</Page>
