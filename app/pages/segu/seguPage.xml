<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="My App" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <TextField hint="Titulo" text="{{ titulo }}"  />
        <TextField hint="Fecha" text="{{ fecha }}"  />
        <TextField hint="Hora" text="{{ hora }}"  />
        <Button text="Green" class="btn btn-primary" tap="seguriNotPage" />
        <Button text="Yellow" class="btn btn-primary" tap="seguriNotPage" />
        <Button text="Red" class="btn btn-primary" tap="seguriNotPage" />
    </StackLayout>
</Page>